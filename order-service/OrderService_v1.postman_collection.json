          "host": ["{{baseUrl}}"],
          "path": ["orders", "{{orderId}}"],
          "query": [
            {
              "key": "status",
              "value": "COMPLETED"
            }
          ]
        },
        "description": "Update the status of an existing order"
      },
      "response": []
    },
