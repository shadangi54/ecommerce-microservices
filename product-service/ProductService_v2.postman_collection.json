      "name": "Get Low Stock Products",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/products/low-stock?threshold=10",
          "host": ["{{baseUrl}}"],
          "path": ["products", "low-stock"],
          "query": [
            {
              "key": "threshold",
              "value": "10",
              "description": "Stock threshold value"
            }
          ]
        },
        "description": "Get products with stock below threshold"
      }
    }
